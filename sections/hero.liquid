
<link rel="stylesheet" href="{{ 'hero.min.css' | asset_url }}" type="text/css" />
 
<section class="hero-section section-{{ section.id }}">
  <div class="hero">
    <div class="hero__bg">
      <picture>
        {%- if section.settings.bg_mobile -%}
          <source
            media="(max-width: 766.99px)"
            srcset="
              {{ section.settings.bg_mobile | img_url: '375x' }} 375w,
              {{ section.settings.bg_mobile | img_url: '550x' }} 550w,
              {{ section.settings.bg_mobile | img_url: '750x' }} 750w"
            sizes="100vw">
        {%- endif -%}
      
        {%- if section.settings.bg_desktop -%}
          <source
            media="(min-width: 767px)"
            srcset="
              {{ section.settings.bg_desktop | img_url: '750x' }} 750w,
              {{ section.settings.bg_desktop | img_url: '1100x' }} 1100w,
              {{ section.settings.bg_desktop | img_url: '1500x' }} 1500w,
              {{ section.settings.bg_desktop | img_url: '2000x' }} 2000w,
              {{ section.settings.bg_desktop | img_url: '3840x' }} 3840w"
            sizes="(min-width: 1200px) 100vw, 100vw">
        {%- endif -%}
       
        <img 
          src="{{ section.settings.bg_desktop | img_url: '1500x' }}" 
          alt="Background image for the hero section" 
          class="hero__bg-img">
      </picture>   
    </div> 
    <div class="container gray_mobile">
      <div class="hero__wrapper-text ">
          <h1 class="hero__wrapper-text--title fw200">
              <span class="hero__wrapper-text--span">
                {{ section.settings.paragraph }}
              </span>
          </h1>    
          <p class="hero__wrapper-text--subtitle p2">{{ section.settings.hero_subtitle }}</p>
          <a href="{{ routes.cart_url }}" class="button hero__button">{{ section.settings.hero_button }}</a>
      </div>
    </div>

  </div> 
</section>

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media screen and (min-width: 767px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "Hero",
  "settings": [
    { 
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top_mobile",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom_mobile",
      "default": 0
    },
    { 
      "type": "image_picker",
      "id": "bg_mobile",
      "label": "Background Mobile"
    },
    {
      "type": "image_picker",
      "id": "bg_desktop",
      "label": "Background Desktop"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle"
    },
    {
      "type": "text",
      "id": "hero_button",
      "label": "Hero Button"
    },
    {
      "type":"richtext",
      "id": "paragraph",
      "label": "Title"
    }
    ], 
  "blocks": [
    {
      "type": "word_block",
      "name": "Word Block",
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Custom sections"
    }
  ]
} 
{% endschema %}  
