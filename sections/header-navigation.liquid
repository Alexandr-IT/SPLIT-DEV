<link rel="stylesheet" href="{{ 'header-navigation.min.css' | asset_url }}" type="text/css" />













<section class="header-navigation section-{{ section.id }}">
    <div class="container">
        <div class="navigation">
            <div class="navigation__logo">
                <img class="navigation__logo_img" src="{{ section.settings.logo | img_url: 'master' }}">
            </div>
            <div class="navigation_left">
    {% for block in section.blocks %}
        {% if block.type == 'text' %}
            <div class="navigation_left__point p2">{{ block.settings.point }}</div>
        {% elsif block.type == 'list' %}
            <div class="dropdown">
                <input type="checkbox" class="dropdown__checkbox" id="dropdownToggle-{{ block.id }}">
                <label for="dropdownToggle-{{ block.id }}" class="dropdown__label p2">{{ block.settings.list_name }}</label>
                <ul class="dropdown__list">
                    {% if block.settings.list_item_1 != blank %}<li><a href="#">{{ block.settings.list_item_1 }}</a></li>{% endif %}
                    {% if block.settings.list_item_2 != blank %}<li><a href="#">{{ block.settings.list_item_2 }}</a></li>{% endif %}
                    {% if block.settings.list_item_3 != blank %}<li><a href="#">{{ block.settings.list_item_3 }}</a></li>{% endif %}
                    {% if block.settings.list_item_4 != blank %}<li><a href="#">{{ block.settings.list_item_4 }}</a></li>{% endif %}
                    {% if block.settings.list_item_5 != blank %}<li><a href="#">{{ block.settings.list_item_5 }}</a></li>{% endif %}
                    {% if block.settings.list_item_6 != blank %}<li><a href="#">{{ block.settings.list_item_6 }}</a></li>{% endif %}
                    {% if block.settings.list_item_7 != blank %}<li><a href="#">{{ block.settings.list_item_7 }}</a></li>{% endif %}
                    {% if block.settings.list_item_8 != blank %}<li><a href="#">{{ block.settings.list_item_8 }}</a></li>{% endif %}
                    {% if block.settings.list_item_9 != blank %}<li><a href="#">{{ block.settings.list_item_9 }}</a></li>{% endif %}
                    {% if block.settings.list_item_10 != blank %}<li><a href="#">{{ block.settings.list_item_10 }}</a></li>{% endif %}
                </ul>
            </div>
          {% endif %}
        {% endfor %}
      </div>


            <div class="navigation_right">
              {% for block in section.blocks %}
                {% if block.type == 'image_picker' %}
                  <div class="navigation_right__point">
                    <img class="navigation_right__point_img" src="{{ block.settings.icon | img_url: 'master' }}" alt="Icon">
                  </div>
                {% endif %}
              {% endfor %}
            </div>
        </div>
    </div>
</section>


{% comment %} 
<script>
  document.addEventListener('click', function(event) {
    document.querySelectorAll('.dropdown').forEach(dropdown => {
      const checkbox = dropdown.querySelector('.dropdown__checkbox');
      const dropdownList = dropdown.querySelector('.dropdown__list');
      const label = dropdown.querySelector('.dropdown__label');
              console.log(checkbox)
      if (checkbox && !label.contains(event.target) && !dropdownList.contains(event.target)) {
        checkbox.checked = true;
      }
    });
  });
</script> {% endcomment %}













