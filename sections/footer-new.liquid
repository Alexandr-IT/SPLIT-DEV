            },
            {
              "type": "image_picker",
              "id": "column_icon_2",
              "label": "Column Icon 2"
            },
            {
              "type": "url",
              "id": "link_icon_2",
              "label": "Link_Icon 2"
            },
            {
              "type": "image_picker",
              "id": "column_icon_3",
              "label": "Column Icon 3"
