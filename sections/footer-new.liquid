            },
            {
              "type": "image_picker",
              "id": "column_icon_4",
              "label": "Column Icon 4"
            },
            {
              "type": "url",
              "id": "link_icon_4",
              "label": "Link_Icon 4"
            },
            {
              "type": "image_picker",
              "id": "column_icon_5",
              "label": "Column Icon 5"
